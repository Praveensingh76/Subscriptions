@model RecommendationsViewModel

@{
    ViewData["Title"] = "Recommendations";
}

<div class="container mt-4">
    <!-- Header with Actions -->
    <!-- Status Alert -->
    @if (!string.IsNullOrEmpty(Model.Recommendations))
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Recommendations Generated Successfully!</h5>
                    <p class="mb-0">Based on your assessment results, we've created personalized guidance for you.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Complete Your Assessment</h5>
                    <p class="mb-0">You need to complete the questionnaire to receive personalized recommendations.</p>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Recommendations))
    {
        <div class="row">
            <!-- Main Recommendations -->
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-list-check text-primary me-2"></i>Your Recommendations
                            </h4>
                            <span class="badge bg-primary">
                                @Model.Recommendations.Split("<br/>", StringSplitOptions.RemoveEmptyEntries).Length items
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush" id="recommendationsList">
                            @{
                                var recommendations = Model.Recommendations.Split("<br/>", StringSplitOptions.RemoveEmptyEntries);
                                for (int i = 0; i < recommendations.Length; i++)
                                {
                                    var recommendation = recommendations[i];
                                    <div class="list-group-item border-0 py-3 px-4">
                                        <div class="d-flex">
                                            <div class="flex-shrink-0">
                                                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width: 40px; height: 40px;">
                                                    <span class="text-primary fw-bold">@(i + 1)</span>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <h5 class="mb-2">Recommendation @(i + 1)</h5>
                                                    
                                                </div>
                                                <p class="mb-0">@Html.Raw(recommendation)</p>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock me-1"></i>Generated on @DateTime.Now.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>


            </div>

            <!-- Sidebar -->

        </div>
    }

</div>

<style>
    .progress-ring {
        position: relative;
        width: 120px;
        height: 120px;
    }

        .progress-ring svg circle {
            transition: stroke-dasharray 0.5s ease;
        }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

        .list-group-item:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .list-group-item.completed {
            background-color: rgba(25, 135, 84, 0.05);
            border-left: 3px solid #198754;
        }

        .list-group-item.in-progress {
            background-color: rgba(255, 193, 7, 0.05);
            border-left: 3px solid #ffc107;
        }
</style>