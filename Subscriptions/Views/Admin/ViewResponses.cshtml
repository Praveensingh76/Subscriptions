@model List<UserResponse>

@{
    ViewData["Title"] = "User Responses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark">
                <i class="fas fa-clipboard-list text-primary me-2"></i>User Responses
            </h1>
            <p class="text-muted mb-0">View and manage all user assessment responses</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" onclick="exportToExcel()">
                <i class="fas fa-file-excel me-2"></i>Export
            </button>
            <button class="btn btn-outline-success" onclick="refreshData()">
                <i class="fas fa-sync-alt me-2"></i>Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@Model.Select(r => r.UserId).Distinct().Count()</h3>
                            <p class="text-muted mb-0">Unique Users</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="fas fa-clipboard-check fa-2x text-success"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@Model.Count</h3>
                            <p class="text-muted mb-0">Total Responses</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="fas fa-chart-pie fa-2x text-warning"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@Model.Count(r => r.Response == "Option1")</h3>
                            <p class="text-muted mb-0">Option 1 Responses</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="fas fa-chart-bar fa-2x text-info"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@Model.Count(r => r.Response == "Option2")</h3>
                            <p class="text-muted mb-0">Option 2 Responses</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Responses Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>All Responses
                    <span class="badge bg-primary ms-2" id="responseCount">@Model.Count</span>
                </h5>
                <div class="d-flex gap-2">
                    <div class="input-group" style="width: 250px;">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Search responses..." id="searchInput">
                    </div>
                    <button class="btn btn-outline-danger" onclick="deleteSelected()" id="deleteSelectedBtn" disabled>
                        <i class="fas fa-trash me-2"></i>Delete Selected
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="responsesTable">
                    <thead class="table-light">
                        <tr>
                            <th width="50">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th>ID</th>
                            <th>User</th>
                            <th>Question ID</th>
                            <th>Response</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var response in Model)
                        {
                            <tr data-response-id="@response.Id" data-user="@response.Name" data-question="@response.QuestionId"
                                data-answer="@response.Response" data-date="@response.CreatedAt.ToString("yyyy-MM-dd")">
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input response-checkbox" type="checkbox" value="@response.Id">
                                    </div>
                                </td>
                                <td><span class="badge bg-secondary">@response.Id</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                            @response.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold">@response.Name</div>
                                            <small class="text-muted">ID: @response.UserId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-question-circle me-1"></i>Q @response.QuestionId
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(response.Response == "Option1" ? "bg-success" : "bg-warning")">
                                        @response.Response
                                    </span>
                                </td>
                                <td>
                                    <div>@response.CreatedAt.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@response.CreatedAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" onclick="viewResponse(@response.Id)">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-warning" onclick="editResponse(@response.Id)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" onclick="deleteResponse(@response.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Responses Found</h4>
                    <p class="text-muted">There are no user responses in the system yet.</p>
                </div>
            }
        </div>
        <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">Showing <span id="showingCount">@Model.Count</span> of @Model.Count responses</small>
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- View Response Modal -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewModalLabel">
                    <i class="fas fa-eye me-2"></i>View Response Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label fw-bold">Response ID</label>
                        <p id="viewId" class="form-control-plaintext"></p>
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-bold">Date Submitted</label>
                        <p id="viewDate" class="form-control-plaintext"></p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label fw-bold">User</label>
                        <p id="viewUser" class="form-control-plaintext"></p>
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-bold">User ID</label>
                        <p id="viewUserId" class="form-control-plaintext"></p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label fw-bold">Question ID</label>
                        <p id="viewQuestionId" class="form-control-plaintext"></p>
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-bold">Response</label>
                        <p><span class="badge" id="viewResponse"></span></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Response Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">
                    <i class="fas fa-edit me-2"></i>Edit Response
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editForm">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id">
                    <input type="hidden" id="editUserId" name="UserId">
                    <input type="hidden" id="editQuestionId" name="QuestionId">

                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label fw-bold">User</label>
                            <p id="editUser" class="form-control-plaintext"></p>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold">Question ID</label>
                            <p id="editQuestionText" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="editResponse" class="form-label fw-bold">Response</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Response" id="editOption1" value="Option1">
                            <label class="form-check-label" for="editOption1">
                                Option 1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Response" id="editOption2" value="Option2">
                            <label class="form-check-label" for="editOption2">
                                Option 2
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="editCreatedAt" class="form-label fw-bold">Created Date</label>
                        <input type="datetime-local" class="form-control" id="editCreatedAt" name="CreatedAt">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this response?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    This action cannot be undone. All data related to this response will be permanently deleted.
                </div>
                <input type="hidden" id="deleteId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

<style>
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #4361ee;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(67, 97, 238, 0.05);
    }

    .form-check-input:checked {
        background-color: #4361ee;
        border-color: #4361ee;
    }

    .badge {
        padding: 5px 10px;
        font-weight: 500;
    }

    .card {
        border: none;
    }
</style>

@section Scripts {
    <script>
        // Filter functionality
        function applyFilters() {
            const userFilter = document.getElementById('userFilter').value.toLowerCase();
            const questionFilter = document.getElementById('questionFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const responseFilter = document.getElementById('responseFilter').value;
            const searchText = document.getElementById('searchInput').value.toLowerCase();

            let visibleCount = 0;

            document.querySelectorAll('#responsesTable tbody tr').forEach(row => {
                const userName = row.dataset.user.toLowerCase();
                const questionId = row.dataset.question;
                const responseDate = row.dataset.date;
                const response = row.dataset.answer;
                const rowText = row.textContent.toLowerCase();

                let showRow = true;

                // Apply filters
                if (userFilter && !userName.includes(userFilter)) showRow = false;
                if (questionFilter && questionId !== questionFilter) showRow = false;
                if (dateFilter && responseDate !== dateFilter) showRow = false;
                if (responseFilter && response !== responseFilter) showRow = false;
                if (searchText && !rowText.includes(searchText)) showRow = false;

                if (showRow) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('responseCount').textContent = visibleCount;
            document.getElementById('showingCount').textContent = visibleCount;
        }

        function clearFilters() {
            document.getElementById('userFilter').value = '';
            document.getElementById('questionFilter').value = '';
            document.getElementById('dateFilter').value = '';
            document.getElementById('responseFilter').value = '';
            document.getElementById('searchInput').value = '';
            applyFilters();
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', applyFilters);

        // Select all checkbox
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.response-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateDeleteButton();
        });

        // Update delete button state
        function updateDeleteButton() {
            const checkedBoxes = document.querySelectorAll('.response-checkbox:checked');
            const deleteBtn = document.getElementById('deleteSelectedBtn');
            deleteBtn.disabled = checkedBoxes.length === 0;
        }

        document.querySelectorAll('.response-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', updateDeleteButton);
        });

        // View response
        function viewResponse(id) {
            const row = document.querySelector(`tr[data-response-id="${id}"]`);
            if (!row) return;

            document.getElementById('viewId').textContent = id;
            document.getElementById('viewUser').textContent = row.dataset.user;
            document.getElementById('viewUserId').textContent = row.dataset.userId || row.dataset.user.split(' ')[0];
            document.getElementById('viewQuestionId').textContent = row.dataset.question;
            document.getElementById('viewResponse').textContent = row.dataset.answer;
            document.getElementById('viewResponse').className = `badge ${row.dataset.answer === 'Option1' ? 'bg-success' : 'bg-warning'}`;
            document.getElementById('viewDate').textContent = row.dataset.date;

            const modal = new bootstrap.Modal(document.getElementById('viewModal'));
            modal.show();
        }

        // Edit response
        function editResponse(id) {
            const row = document.querySelector(`tr[data-response-id="${id}"]`);
            if (!row) return;

            document.getElementById('editId').value = id;
            document.getElementById('editUserId').value = row.dataset.userId || '1';
            document.getElementById('editQuestionId').value = row.dataset.question;
            document.getElementById('editUser').textContent = row.dataset.user;
            document.getElementById('editQuestionText').textContent = `Question ${row.dataset.question}`;

            // Set radio button
            if (row.dataset.answer === 'Option1') {
                document.getElementById('editOption1').checked = true;
            } else {
                document.getElementById('editOption2').checked = true;
            }

            // Format date for datetime-local input
            const date = new Date(row.dataset.date);
            const formattedDate = date.toISOString().slice(0, 16);
            document.getElementById('editCreatedAt').value = formattedDate;

            const modal = new bootstrap.Modal(document.getElementById('editModal'));
            modal.show();
        }

        // Submit edit form
        document.getElementById('editForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const formData = {
                Id: document.getElementById('editId').value,
                UserId: document.getElementById('editUserId').value,
                QuestionId: document.getElementById('editQuestionId').value,
                Response: document.querySelector('input[name="Response"]:checked').value,
                CreatedAt: document.getElementById('editCreatedAt').value
            };

            // In a real application, you would send this to your server
            console.log('Saving response:', formData);

            // Show success message
            showToast('Success', 'Response updated successfully!', 'success');

            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
            modal.hide();

            // Refresh the table (in real app, you might reload data from server)
            setTimeout(() => location.reload(), 1000);
        });

        // Delete response
        function deleteResponse(id) {
            document.getElementById('deleteId').value = id;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Delete selected responses
        function deleteSelected() {
            const selectedIds = [];
            document.querySelectorAll('.response-checkbox:checked').forEach(checkbox => {
                selectedIds.push(checkbox.value);
            });

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected response(s)?`)) {
                // In a real application, you would send this to your server
                console.log('Deleting responses:', selectedIds);

                // Show success message
                showToast('Success', `${selectedIds.length} response(s) deleted successfully!`, 'success');

                // Refresh the table
                setTimeout(() => location.reload(), 1000);
            }
        }

        function confirmDelete() {
            const id = document.getElementById('deleteId').value;

            // In a real application, you would send this to your server
            console.log('Deleting response:', id);

            // Show success message
            showToast('Success', 'Response deleted successfully!', 'success');

            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
            modal.hide();

            // Refresh the table
            setTimeout(() => location.reload(), 1000);
        }

        // Export to Excel
        function exportToExcel() {
            // In a real application, you would generate and download an Excel file
            // For now, we'll just show a message
            showToast('Info', 'Export feature coming soon!', 'info');
        }

        // Refresh data
        function refreshData() {
            location.reload();
        }

        // Toast notification
        function showToast(title, message, type) {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();

            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-bg-${type === 'error' ? 'danger' : type} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');

            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <strong>${title}</strong><br>
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;

            toastContainer.appendChild(toast);

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();

            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            document.body.appendChild(container);
            return container;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Add event listeners to filter controls
            document.getElementById('userFilter').addEventListener('change', applyFilters);
            document.getElementById('questionFilter').addEventListener('change', applyFilters);
            document.getElementById('dateFilter').addEventListener('change', applyFilters);
            document.getElementById('responseFilter').addEventListener('change', applyFilters);
        });
    </script>
}