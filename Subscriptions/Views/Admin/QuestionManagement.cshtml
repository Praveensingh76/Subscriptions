@model List<Question>

@{
    ViewData["Title"] = "Question Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark">
                <i class="fas fa-question-circle text-primary me-2"></i>Question Management
            </h1>
            <p class="text-muted mb-0">View all assessment questions and categories</p>
        </div>
        <div>
            <span class="badge bg-primary px-3 py-2">
                <i class="fas fa-list-ol me-1"></i>Total Questions: @Model.Count
            </span>
        </div>
    </div>

    <!-- Categories Summary -->
    <div class="row mb-4">
        @foreach (var category in Model.Select(q => q.Category).Distinct())
        {
            var categoryCount = Model.Count(q => q.Category == category);
            <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                            <i class="fas fa-folder fa-2x text-primary"></i>
                        </div>
                        <h3 class="mb-1">@categoryCount</h3>
                        <p class="text-muted mb-0">@category</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Questions Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>All Assessment Questions
                </h5>
                <div class="d-flex gap-2">
                    <div class="input-group" style="width: 250px;">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Search questions..." id="searchInput">
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="filterByCategory('all')">All Categories</a></li>
                            @foreach (var category in Model.Select(q => q.Category).Distinct())
                            {
                                <li><a class="dropdown-item" href="#" onclick="filterByCategory('@category')">@category</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="questionsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="50">#</th>
                            <th width="100">ID</th>
                            <th>Question Text</th>
                            <th width="150">Category</th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var question = Model[i];
                            <tr data-question-id="@question.Id" data-category="@question.Category"
                                data-text="@question.QuestionText">
                                <td>
                                    <span class="fw-bold">@(i + 1)</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@question.Id</span>
                                </td>
                                <td>
                                    <div class="question-text">
                                        @question.QuestionText
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-tag me-1"></i>@question.Category
                                    </span>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-primary"
                                            onclick="viewQuestion(@question.Id)">
                                        <i class="fas fa-eye me-1"></i>View
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Questions Found</h4>
                    <p class="text-muted">There are no questions in the system yet.</p>
                </div>
            }
        </div>
        <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">Showing <span id="showingCount">@Model.Count</span> of @Model.Count questions</small>
                </div>
                <div>
                    <small class="text-muted">Questions are organized by category for easier management</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Question Modal -->
<div class="modal fade" id="viewQuestionModal" tabindex="-1" aria-labelledby="viewQuestionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewQuestionModalLabel">
                    <i class="fas fa-eye me-2"></i>Question Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="fas fa-hashtag text-primary"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Question ID</small>
                                        <h5 class="mb-0" id="viewId"></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="fas fa-tag text-info"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Category</small>
                                        <h5 class="mb-0" id="viewCategory"></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h6 class="mb-0">
                            <i class="fas fa-question-circle me-2"></i>Question Text
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0" id="viewQuestionText"></p>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="mb-3">
                        <i class="fas fa-info-circle me-2"></i>Additional Information
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <small class="text-muted">Assessment Question</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-list-ol text-primary me-2"></i>
                                <small class="text-muted">Used in Assessment Form</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-users text-warning me-2"></i>
                                <small class="text-muted">Used by Multiple Users</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-lightbulb text-info me-2"></i>
                                <small class="text-muted">Generates Recommendations</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .badge {
        padding: 5px 10px;
        font-weight: 500;
    }

    .question-text {
        line-height: 1.5;
        max-height: 60px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .card {
        border: none;
    }

    .table th {
        font-weight: 600;
        color: #495057;
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        vertical-align: middle;
        padding: 1rem 0.75rem;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }
</style>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchText = this.value.toLowerCase();
            let visibleCount = 0;

            document.querySelectorAll('#questionsTable tbody tr').forEach(row => {
                const category = row.dataset.category.toLowerCase();
                const text = row.dataset.text.toLowerCase();
                const id = row.dataset.questionId;
                const rowText = row.textContent.toLowerCase();

                if (category.includes(searchText) || text.includes(searchText) ||
                    id.includes(searchText) || rowText.includes(searchText)) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('showingCount').textContent = visibleCount;
        });

        // Filter by category
        function filterByCategory(category) {
            let visibleCount = 0;

            document.querySelectorAll('#questionsTable tbody tr').forEach(row => {
                if (category === 'all' || row.dataset.category === category) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('showingCount').textContent = visibleCount;

            // Update dropdown text
            const dropdownButton = document.querySelector('.dropdown-toggle');
            if (category === 'all') {
                dropdownButton.innerHTML = '<i class="fas fa-filter me-2"></i>Filter';
            } else {
                dropdownButton.innerHTML = `<i class="fas fa-filter me-2"></i>${category}`;
            }
        }

        // View question details
        function viewQuestion(id) {
            const row = document.querySelector(`tr[data-question-id="${id}"]`);
            if (!row) return;

            document.getElementById('viewId').textContent = id;
            document.getElementById('viewCategory').textContent = row.dataset.category;
            document.getElementById('viewQuestionText').textContent = row.dataset.text;

            const modal = new bootstrap.Modal(document.getElementById('viewQuestionModal'));
            modal.show();
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-expand question text on hover for better readability
            document.querySelectorAll('.question-text').forEach(text => {
                const originalText = text.textContent;
                text.title = originalText;

                text.addEventListener('mouseenter', function() {
                    if (this.scrollHeight > this.clientHeight) {
                        const temp = this.style;
                        this.style.whiteSpace = 'normal';
                        this.style.height = 'auto';
                        this.style.maxHeight = 'none';

                        setTimeout(() => {
                            this.style.whiteSpace = temp.whiteSpace;
                            this.style.height = temp.height;
                            this.style.maxHeight = temp.maxHeight;
                        }, 3000);
                    }
                });
            });
        });
    </script>
}